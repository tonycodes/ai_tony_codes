# GitFlow Reporter Configuration
GITFLOW_REPORTER_LICENSE_KEY=
GITFLOW_REPORTER_GITHUB_TOKEN=
GITFLOW_REPORTER_GITHUB_OWNER=
GITFLOW_REPORTER_GITHUB_REPO=
GITFLOW_REPORTER_POSITION=bottom-right
GITFLOW_REPORTER_THEME=auto
GITFLOW_REPORTER_SHOW_TO_GUESTS=false
GITFLOW_REPORTER_SHOW_IN_DEV=true

# Features
GITFLOW_REPORTER_SCREENSHOTS=true  # Set to false for sensitive sites
GITFLOW_REPORTER_CONTEXT=true
GITFLOW_REPORTER_PRIORITY=true

# Security
GITFLOW_REPORTER_RATE_LIMIT=5  # Reports per time period per user (0 = no limit)
GITFLOW_REPORTER_RATE_DURATION=3600  # Rate limit duration in seconds (3600 = 1 hour)